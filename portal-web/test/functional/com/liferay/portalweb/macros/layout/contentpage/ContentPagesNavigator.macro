definition {

	@summary = "Default summary"
	macro _convertNameToKey(name = null) {
		Variables.assertDefined(parameterList = ${name});

		var key = StringUtil.replace(${name}, " ", "-");

		var key = StringUtil.lowerCase(${key});

		return ${key};
	}

	@summary = "Default summary"
	macro goToTranslation(pageName = null) {
		PagesAdmin.openPageEllipsisMenu(pageName = ${pageName});

		MenuItem.click(menuItem = "Translate");
	}

	@summary = "Default summary"
	macro openEditContentPage(pageFriendlyURL = null, siteURLKey = null, siteName = null, locale = null, privateLayout = null, pageName = null) {
		if (contains(${siteName}, "Staging")) {
			Navigator.openSiteURL(siteName = ${siteName});
		}

		ContentPagesNavigator.openViewContentPage(
			locale = ${locale},
			pageFriendlyURL = ${pageFriendlyURL},
			pageName = ${pageName},
			privateLayout = ${privateLayout},
			siteName = ${siteName},
			siteURLKey = ${siteURLKey});

		ContentPages.gotoPageEditor();
	}

	@summary = "Default summary"
	macro openViewContentPage(siteName = null, privateLayout = null, locale = null, pageName = null) {
		if (!(isSet(siteURLKey))) {
			var siteURLKey = ContentPagesNavigator._convertNameToKey(name = ${siteName});
		}

		if (!(isSet(pageFriendlyURL))) {
			var pageFriendlyURL = ContentPagesNavigator._convertNameToKey(name = ${pageName});
		}

		if (${privateLayout} == "true") {
			var type = "group";
		}
		else {
			var type = "web";
		}

		if (isSet(locale)) {
			Navigator.openWithAppendToBaseURL(urlAppend = "${locale}/${type}/${siteURLKey}/${pageFriendlyURL}");
		}
		else {
			Navigator.openWithAppendToBaseURL(urlAppend = "${type}/${siteURLKey}/${pageFriendlyURL}");
		}
	}

}