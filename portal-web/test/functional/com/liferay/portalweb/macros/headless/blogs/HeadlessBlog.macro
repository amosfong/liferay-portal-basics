definition {

	@summary = "Default summary"
	macro addBlogEntry(userPassword = null, grandParentGroupName = null, description = null, userEmailAddress = null, title = null, parentGroupName = null, content = null, groupName = null, assetCategoryIds = null, viewableBy = null, coverImageId = null, subtitle = null, assetTagNames = null) {
		Variables.assertDefined(parameterList = "${content},${title}");

		if (!(isSet(site))) {
			var site = "true";
		}

		if (!(isSet(groupId))) {
			var groupId = JSONGroupAPI._getGroupIdByName(
				grandParentGroupName = ${grandParentGroupName},
				groupName = ${groupName},
				parentGroupName = ${parentGroupName},
				site = ${site});
		}

		var entryId = HeadlessBlogAPI._addBlogEntry(
			assetCategoryIds = ${assetCategoryIds},
			assetTagNames = ${assetTagNames},
			content = ${content},
			coverImageId = ${coverImageId},
			description = ${description},
			groupId = ${groupId},
			subtitle = ${subtitle},
			title = ${title},
			userEmailAddress = ${userEmailAddress},
			userPassword = ${userPassword},
			viewableBy = ${viewableBy});

		return ${entryId};
	}

}