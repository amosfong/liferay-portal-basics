definition {

	@summary = "Default summary"
	macro addContent(content = null) {
		AlloyEditor.typeEditor(
			content = ${content},
			editor = "content");
	}

	@summary = "Default summary"
	macro addSourceContent(content = null) {
		AlloyEditor.clickContentField();

		Click(locator1 = "Button#EDITOR_SWITCH");

		Type.typeAceEditor(
			locator1 = "TextArea#ACE_EDITOR",
			value1 = ${content});
	}

	@summary = "Default summary"
	macro clickContentField() {
		Click(
			key_editor = "content",
			locator1 = "AlloyEditor#EDITOR");
	}

	@summary = "Default summary"
	macro typeEditor(editor = null, content = null) {
		Type.typeEditor(
			key_editor = ${editor},
			locator1 = "AlloyEditor#EDITOR",
			value1 = ${content});
	}

}