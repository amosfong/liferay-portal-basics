	@summary = "Default summary"
	macro assertViewerPermissions(publicationName = null) {
		AssertElementPresent(locator1 = "Publications#REVIEW_CHANGES_BUTTON");

		Click(locator1 = "Publications#REVIEW_CHANGES_BUTTON");

		PublicationsChanges.assertPublicationsCommentsCRUDPermissions();
	}

	@summary = "Default summary"
	macro viewPublicationRoleHelpText(publicationRoleHelpText = null, publicationRole = null) {
		var key_publicationRole = ${publicationRole};
		var key_publicationRoleHelpText = ${publicationRoleHelpText};

		AssertTextEquals.assertPartialText(
			locator1 = "Publications#PUBLICATION_ROLE_BUTTON_HELP_TEXT",
			value1 = ${publicationRoleHelpText});
	}

}