definition {

	@summary = "Default summary"
	macro addLinkToContent(externalLink = null) {
		Click(locator1 = "CKEditor#TOOLBAR_LINK_BUTTON_BALLOON");

		if (isSet(externalLink)) {
			Type(
				key_text = "URL",
				locator1 = "TextInput#ANY",
				value1 = ${externalLink});
		}

		Click(locator1 = "CKEditor#OK_BUTTON");
	}

	@summary = "Default summary"
	macro addPageContent(wikiPageContent = null) {
		SelectFrame.selectFrameNoLoading(locator1 = "CKEditor#BODY_FIELD_IFRAME");

		Type(
			locator1 = "CKEditor#BODY",
			value1 = ${wikiPageContent});

		SelectFrame(value1 = "relative=top");
	}

	@summary = "Default summary"
	macro addPageContentTable() {
		Click(locator1 = "CKEditor#TABLE_ICON");

		Click(locator1 = "CKEditor#OK_BUTTON");
	}

	@summary = "Default summary"
	macro addPageSummary(wikiPageSummary = null) {
		Panel.expandPanel(panel = "Configuration");

		Type(
			key_text = "Summary",
			locator1 = "TextInput#ANY",
			value1 = ${wikiPageSummary});

		Button.clickPublish();

		Alert.viewSuccessMessage();
	}

	@summary = "Default summary"
	macro addPageTitle(wikiPageTitle = null, wikiChildPageTitle = null) {
		if (isSet(wikiPageTitle)) {
			var title = ${wikiPageTitle};
		}
		else if (isSet(wikiChildPageTitle)) {
			var title = ${wikiChildPageTitle};
		}

		Type(
			locator1 = "Wiki#ENTRY_TITLE",
			value1 = ${title});
	}

	@summary = "Default summary"
	macro cancel() {
		AssertClick(
			locator1 = "Button#CANCEL",
			value1 = "Cancel");
	}

	@summary = "Default summary"
	macro confirmHTML() {
		AssertConfirm(value1 = "You may lose some formatting when switching from Creole to HTML. Do you want to continue?");
	}

	@summary = "Default summary"
	macro saveAsDraft() {
		AssertClick(
			locator1 = "Button#SAVE",
			value1 = "Save as Draft");

		Alert.viewSuccessMessage();
	}

	@summary = "Default summary"
	macro selectPageFormat(pageFormat = null) {
		if (IsNotVisible(locator1 = "Wiki#ADD_PAGE_FORMAT_DROPDOWN")) {
			Panel.expandPanel(panel = "Configuration");

			SelectNoError(
				locator1 = "Wiki#ADD_PAGE_FORMAT_DROPDOWN",
				value1 = ${pageFormat});
		}
		else if (IsVisible(locator1 = "Wiki#ADD_PAGE_FORMAT_DROPDOWN")) {
			SelectNoError(
				locator1 = "Wiki#ADD_PAGE_FORMAT_DROPDOWN",
				value1 = ${pageFormat});
		}
	}

	@summary = "Default summary"
	macro viewPageContentBody(wikiPageContent = null) {
		AssertTextEquals(
			locator1 = "WikiEntry#BODY",
			value1 = ${wikiPageContent});
	}

}