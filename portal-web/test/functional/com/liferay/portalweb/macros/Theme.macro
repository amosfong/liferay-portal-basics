definition {

	@summary = "Default summary"
	macro changeCurrentTheme(themeName = null) {
		WaitForLiferayEvent.initializeLiferayEventLog();

		Click(
			key_text = "Change Current Theme",
			locator1 = "Button#ANY_ENABLED");

		SelectFrame(locator1 = "IFrame#MODAL_BODY");

		LexiconCard.viewCardTitle(card = ${themeName});

		LexiconCard.clickCardTitle(card = ${themeName});

		SelectFrameTop(value1 = "relative=top");
	}

	@summary = "Default summary"
	macro configureLookAndFeelCustomCSS(cssText = null) {
		Type(
			key_text = "regularCss",
			locator1 = "TextArea#ANY",
			value1 = ${cssText});
	}

	@summary = "Default summary"
	macro configureLookAndFeelShowFooter(showFooter = null) {
		if (${showFooter} == "true") {
			Check.checkToggleSwitch(
				key_toggleSwitchLabel = "Show Footer",
				locator1 = "ToggleSwitch#ANY_TOGGLE_SWITCH");
		}
		else if (${showFooter} == "false") {
			Uncheck.uncheckToggleSwitch(
				key_toggleSwitchLabel = "Show Footer",
				locator1 = "ToggleSwitch#ANY_TOGGLE_SWITCH");
		}
	}

