definition {

	@summary = "Default summary"
	macro viewHelpInfo(info = null) {
		Click(locator1 = "CustomerPortalSite#SUPPORT_SEAT");

		AssertVisible(
			key_content = ${info},
			locator1 = "Tooltip#POPOVER_BODY");
	}

	@summary = "Default summary"
	macro viewHelpInformation(header = null, info = null) {
		MouseOver(
			key_text = "question-circle",
			locator1 = "Icon#ANY_LAST");

		AssertVisible(
			key_header = ${header},
			locator1 = "Tooltip#POPOVER_HEADER");

		AssertVisible(
			key_content = ${info},
			locator1 = "Tooltip#POPOVER_BODY_CONTENT");
	}

}