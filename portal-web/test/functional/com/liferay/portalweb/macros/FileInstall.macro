definition {

	@summary = "Delete ${configFile} from Bundle's Liferay home"
	macro deleteConfigFile(configFile = null) {
		var liferayHome = PropsUtil.get("liferay.home.dir.name");

		AntCommands.runCommand("build-test.xml", "delete-dependency-file  -Dliferay.dependency.config=${configFile} -Dliferay.home=${liferayHome}");
	}

	@summary = "Delete ${jarFile} from Bundle's Liferay home"
	macro deleteJarOffline(jarFile = null) {
		var liferayHome = PropsUtil.get("liferay.home.dir.name");

		AntCommands.runCommand("build-test.xml", "delete-dependency-file  -Dliferay.dependency.jar=${jarFile} -Dliferay.home=${liferayHome}");
	}

	@summary = "Delete portal ${jarFile} from Bundle's Liferay home"
	macro deletePortalJarOffline(jarFile = null) {
		var liferayHome = PropsUtil.get("liferay.home.dir.name");

		AntCommands.runCommand("build-test.xml", "delete-dependency-file  -Dliferay.home=${liferayHome} -Dliferay.portal.dependency.jar=${jarFile}");
	}

	@summary = "Delete ${warFile} from Bundle's Liferay home"
	macro deleteWarOffline(warFile = null) {
		var liferayHome = PropsUtil.get("liferay.home.dir.name");

		AntCommands.runCommand("build-test.xml", "delete-dependency-file  -Dliferay.dependency.war=${warFile} -Dliferay.home=${liferayHome}");
	}

	@summary = "Deploy ${jarFile} on the server"
	macro deployFileOnServer(jarFile = null, bundleIndex = null) {
		var liferayHome = PropsUtil.get("liferay.home.dir.name");

		if ((${bundleIndex} == 0) || !(isSet(bundleIndex))) {
			var deployDir = "${liferayHome}/deploy";
		}
		else {
			var deployDir = "${liferayHome}-${bundleIndex}/deploy";
		}

		var dependencyFilePath = TestCase.getDependenciesDirPath(fileName = ${jarFile});

		ArchiveUtil.archive(${dependencyFilePath}, "${deployDir}/${jarFile}");
	}

}