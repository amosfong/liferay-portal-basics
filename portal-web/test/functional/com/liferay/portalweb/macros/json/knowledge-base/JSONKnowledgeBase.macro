	@summary = "Default summary"
	macro _getChildKBResourcePrimKey(groupName = null, kbChildArticleTitle = null, folderName = null, kbArticleTitle = null) {
		if (!(isSet(site))) {
			var site = "true";
		}

		var groupId = JSONGroupAPI._getGroupIdByName(
			groupName = ${groupName},
			site = ${site});
		var portalURL = JSONCompany.getPortalURL();

		if (isSet(folderName)) {
			var parentResourcePrimKey = JSONKnowledgeBase._getKBResourcePrimKey(
				folderName = ${folderName},
				groupName = ${groupName},
				kbArticleTitle = ${kbArticleTitle});
		}
		else {
			var parentResourcePrimKey = JSONKnowledgeBase._getKBResourcePrimKey(
				groupName = ${groupName},
				kbArticleTitle = ${kbArticleTitle});
		}

		var userLoginInfo = JSONUtil2.formatJSONUser();

		var curl = '''
			${portalURL}/api/jsonws/kb.kbarticle/get-kb-articles \
				-u ${userLoginInfo} \
				-d groupId=${groupId} \
				-d parentResourcePrimKey=${parentResourcePrimKey} \
				-d status=0 \
				-d "start=-1" \
				-d "end=-1" \
				-d -orderByComparator=
		''';

		var resourcePrimKey = JSONCurlUtil.post(${curl}, "$.[?(@['title'] == '${kbChildArticleTitle}')]['resourcePrimKey']");

		if (${resourcePrimKey} == "") {
			fail("FAIL. Cannot find resourcePrimKey.");
		}
		else {
			return ${resourcePrimKey};
		}
	}

