	@summary = "Default summary"
	macro updateKBArticle(newKbArticleContent = null, newKbArticleTitle = null, groupName = null, assetCategoryIds = null, addGuestPermissions = null, assetTagNames = null, folderName = null, kbArticleTitle = null) {
		var portalURL = JSONCompany.getPortalURL();

		if (isSet(folderName)) {
			var resourcePrimKey = JSONKnowledgeBase._getKBResourcePrimKey(
				folderName = ${folderName},
				groupName = ${groupName},
				kbArticleTitle = ${kbArticleTitle});
