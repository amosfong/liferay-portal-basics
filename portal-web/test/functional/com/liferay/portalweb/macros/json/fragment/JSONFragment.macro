		if (${fragmentNameResult} == "") {
			fail("The fragment ${fragmentName} was not found.");
		}
	}

	@summary = "Default summary"
	macro assertFragmentNotInGroup(groupName = null, site = null, fragmentName = null, groupKey = null, collectionName = null) {
