definition {

	@summary = "Default summary"
	macro _addTag(groupId = null, tagName = null) {
		Variables.assertDefined(parameterList = "${groupId},${tagName}");

		var portalURL = JSONCompany.getPortalURL();
		var userLoginInfo = JSONUtil2.formatJSONUser();

		var curl = '''
			${portalURL}/api/jsonws/assettag/add-tag \
				-u ${userLoginInfo} \
				-d externalReferenceCode='' \
				-d groupId=${groupId} \
				-d name=${tagName}
		''';

		com.liferay.poshi.runner.util.JSONCurlUtil.post(${curl});
	}

	@summary = "Default summary"
	macro _getTagId(groupId = null, tagName = null) {
		Variables.assertDefined(parameterList = "${groupId},${tagName}");

		var portalURL = JSONCompany.getPortalURL();
		var userLoginInfo = JSONUtil2.formatJSONUser();

		var curl = '''
			${portalURL}/api/jsonws/assettag/get-tags \
				-u ${userLoginInfo} \
				-d groupIds=[${groupId}] \
				-d name='${tagName}' \
				-d 'start=-1' \
				-d 'end=-1' \
				-d -orderByComparator=
		''';

		var tagId = JSONCurlUtil.post(${curl}, "$..['tagId']");

		return ${tagId};
	}

}