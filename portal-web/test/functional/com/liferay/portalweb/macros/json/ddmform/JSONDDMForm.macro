definition {

	@summary = "Default summary"
	macro getFormInstanceId(groupName = null, formName = null) {
		Variables.assertDefined(parameterList = "${groupName},${formName}");

		var formInstanceId = JSONDDMFormAPI._getFormInstanceId(
			formName = ${formName},
			groupName = ${groupName});

		return ${formInstanceId};
	}

	@summary = "Default summary"
	macro getFormInstanceRecordId(groupName = null, formName = null) {
		Variables.assertDefined(parameterList = "${groupName},${formName}");

		var formInstanceId = JSONDDMFormAPI._getFormInstanceId(
			formName = ${formName},
			groupName = ${groupName});

		JSONDDMFormAPI._getFormInstanceRecordId(formInstanceId = ${formInstanceId});
	}

}