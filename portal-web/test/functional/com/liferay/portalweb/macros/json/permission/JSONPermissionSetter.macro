definition {

	@summary = "Default summary"
	macro setGroupId(noSelenium = null, specificURL = null) {
		if (!(isSet(groupName))) {
			var groupName = "Global";
		}

		if (!(isSet(site))) {
			var site = "true";
		}

		var groupId = JSONGroupAPI._getGroupIdByName(
			groupName = ${groupName},
			noSelenium = ${noSelenium},
			site = ${site},
			specificURL = ${specificURL});

		return ${groupId};
	}

	@summary = "Default summary"
	macro setPrimKey(roleType = null) {
		JSONPermissionValidator.validateRoleType(roleType = ${roleType});

		if (${roleType} == "regular") {
			var primKey = JSONCompany.getCompanyIdNoSelenium();
		}
		else if ((${roleType} == "site") || (${roleType} == "organization") || (${roleType} == "asset library") || (${roleType} == "account")) {
			var primKey = 0;
		}

		return ${primKey};
	}

	@summary = "Default summary"
	macro setRoleId(roleTitle = null, specificURL = null) {
		Variables.assertDefined(parameterList = ${roleTitle});

		var roleId = JSONRoleAPI._getRoleIdByName(
			name = ${roleTitle},
			specificURL = ${specificURL});

		return ${roleId};
	}

	@summary = "Default summary"
	macro setRoleType() {
		if (!(isSet(roleType))) {
			var roleType = "regular";
		}

		return ${roleType};
	}

	@summary = "Default summary"
	macro setScope(roleType = null) {
		JSONPermissionValidator.validateRoleType(roleType = ${roleType});

		if (${roleType} == "regular") {
			var scope = 1;
		}
		else if ((${roleType} == "site") || (${roleType} == "organization") || (${roleType} == "asset library") || (${roleType} == "account")) {
			var scope = 3;
		}

		return ${scope};
	}

}