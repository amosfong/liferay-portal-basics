definition {

	@summary = "Default summary"
	macro addDynamicAssetListEntry(groupName = null, site = null, title = null) {
		Variables.assertDefined(parameterList = "${groupName},${title}");

		var groupId = JSONAssetlistSetter.setGroupId(
			groupName = ${groupName},
			site = ${site});
		var type = JSONAssetlistSetter.setType(selectionType = "dynamic");

		JSONAssetlistAPI._addAssetListEntry(
			groupId = ${groupId},
			title = ${title},
			type = ${type});
	}

	@summary = "Default summary"
	macro addDynamicAssetListEntryWithItemType(groupName = null, itemType = null, site = null, itemSubtype = null, title = null) {
		Variables.assertDefined(parameterList = "${groupName},${itemType},${title}");

		var groupId = JSONAssetlistSetter.setGroupId(
			groupName = ${groupName},
