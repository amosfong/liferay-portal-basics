definition {

	@summary = "Default summary"
	macro changeDisplayStyle(displayStyle = null) {
		ManagementBar.changeDisplayStyle(displayStyle = ${displayStyle});
	}

	@summary = "Default summary"
	macro clickEntryEllipsis(entry = null) {
		LexiconList.clickEllipsis(listEntry = ${entry});
	}

	@summary = "Default summary"
	macro clickEntryEllipsisItem(entry = null, item = null) {
		LexiconList.clickEllipsisItem(
			item = ${item},
			listEntry = ${entry});
	}

	@summary = "Default summary"
	macro clickSelectAllCheckbox() {
		ManagementBar.clickSelectAllCheckbox();
	}

	@summary = "Default summary"
	macro configureEmailNotifications(navTab = null, fieldName = null, notificationsSubject = null, notificationsBody = null, enabled = null) {
		MenuBar.click(menuBar = ${navTab});

		if (${enabled} == "true") {
			Check(
				inputFieldId = ${fieldName},
				locator1 = "TextInput#INPUT_ID");
		}

		if (isSet(notificationsSubject)) {
			Type(
				inputFieldId = "${fieldName}Subject",
				locator1 = "TextInput#INPUT_ID",
				value1 = ${notificationsSubject});
		}

		if (isSet(notificationsBody)) {
			Type.typeEditor(
				bodyFieldId = ${fieldName},
				locator1 = "CKEditor#BODY_FIELD_ID",
				value1 = ${notificationsBody});
		}

		PortletEntry.save();
	}

	@summary = "Default summary"
	macro gotoEntry(entry = null) {
		LexiconList.clickListEntryTitle(listEntry = ${entry});
	}

	@summary = "Default summary"
	macro moveEntryToRecycleBin(entry = null) {
		WebContentAdmin.clickEntryEllipsisItem(
			entry = ${entry},
			item = "Delete");

		Confirm(value1 = "null");
	}

	@summary = "Select highlighted structures"
	macro selectHighlightedStructures(structureNameList = null) {
		WaitForElementPresent(
			key_text = "Select",
			locator1 = "Button#ANY");

		Click(
			key_text = "Select",
			locator1 = "Button#ANY");

		SelectFrame(locator1 = "IFrame#MODAL_BODY");

		for (var structureName : list ${structureNameList}) {
			LexiconTable.checkTableCheckbox(tableEntry = ${structureName});
		}

		SelectFrameTop();

		Click(
			key_text = "Add",
			locator1 = "Modal#MODAL_FOOTER_BUTTON");
	}

	@summary = "Default summary"
	macro viewEntryNotPresent(entry = null) {
		LexiconList.viewListEntryNotPresent(listEntry = ${entry});
	}

	@summary = "Default summary"
	macro viewEntryTitle(entry = null) {
		LexiconList.viewListEntryTitleLink(listEntry = ${entry});
	}

	@summary = "Default summary"
	macro viewEntryWorkflowStatus(entry = null, workflowStatus = null) {
		LexiconList.viewListEntryLabel(
			listEntry = ${entry},
			listEntryLabel = ${workflowStatus});
	}

}