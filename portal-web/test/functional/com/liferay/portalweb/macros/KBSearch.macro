definition {

	@summary = "Default summary"
	macro searchWidget(searchTerm = null) {
		Type(
			locator1 = "KnowledgeBase#SEARCH_WIDGET_BAR",
			value1 = ${searchTerm});

		KeyPress(
			locator1 = "KnowledgeBase#SEARCH_WIDGET_BAR",
			value1 = "\RETURN");
	}

	@summary = "Default summary"
	macro viewSearchResultPG(kbDescription = null, description = null, kbArticleTitle = null) {
		AssertTextEquals.assertPartialText(
			key_kbArticleTitle = ${kbArticleTitle},
			locator1 = "KnowledgeBase#SEARCH_WIDGET_ARTICLE_TITLE",
			value1 = ${kbArticleTitle});

		AssertClick(
			key_kbArticleTitle = ${kbArticleTitle},
			locator1 = "KnowledgeBase#SEARCH_WIDGET_ARTICLE_TITLE",
			value1 = ${kbArticleTitle});

		AssertVisible(
			key_title = ${kbArticleTitle},
			locator1 = "Header#H1_TITLE");

		if (isSet(kbDescription)) {
			if (${description} == "Disabled") {
				AssertElementNotPresent(
					key_text = "Description",
					locator1 = "Sidebar#SUBTITLE");

				AssertElementNotPresent(locator1 = "KnowledgeBase#ARTICLE_DESCRIPTION");
			}
			else {
				AssertTextEquals(
					key_text = "Description",
					locator1 = "Sidebar#SUBTITLE",
					value1 = "Description");

				AssertTextEquals(
					locator1 = "KnowledgeBase#ARTICLE_DESCRIPTION",
					value1 = ${kbDescription});
			}
		}
	}

}