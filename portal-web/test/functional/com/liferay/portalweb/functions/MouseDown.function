@default = "mouseDown"
definition {

	function mouseDown(locator1) {
		WaitForSPARefresh();

		selenium.mouseDown(${locator1});

		selenium.assertJavaScriptErrors("true");

		selenium.assertLiferayErrors();
	}

	function mouseDownAt(locator1, value1) {
		WaitForSPARefresh();

		selenium.waitForVisible(${locator1}, "false");

		selenium.mouseDownAt(${locator1}, ${value1});

		selenium.assertJavaScriptErrors("true");

		selenium.assertLiferayErrors();
	}

}