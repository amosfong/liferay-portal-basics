@default = "isElementPresent"
definition {

	function isElementPresent(locator1) {
		WaitForSPARefresh();

		selenium.isElementPresent(${locator1});
	}

	function isElementPresentAfterWait(locator1) {
		WaitForSPARefresh();

		selenium.isElementPresentAfterWait(${locator1});
	}

	function isElementPresentNoSPARefresh(locator1) {
		selenium.isElementPresent(${locator1});
	}

	function isVisible(locator1) {
		WaitForSPARefresh();

		selenium.isVisible(${locator1});
	}

	function pauseIsElementPresent(locator1) {
		WaitForSPARefresh();

		selenium.pause(1000);

		selenium.isElementPresent(${locator1});
	}

}