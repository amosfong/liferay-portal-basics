@default = "assertVisible"
definition {

	function assertVisible(locator1) {
		WaitForSPARefresh();

		selenium.waitForVisible(${locator1}, "false");

		selenium.assertVisible(${locator1});

		selenium.assertJavaScriptErrors("true");

		selenium.assertLiferayErrors();
	}

	function assertVisibleNoSPAWait(locator1) {
		selenium.waitForVisible(${locator1}, "false");

		selenium.assertVisible(${locator1});

		selenium.assertJavaScriptErrors("true");

		selenium.assertLiferayErrors();
	}

}