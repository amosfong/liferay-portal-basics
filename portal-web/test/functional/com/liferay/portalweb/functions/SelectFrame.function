@default = "selectFrame"
definition {

	function selectFrame(locator1) {
		if (contains(${locator1}, "/iframe")) {
			WaitForFrameLoad();

			selenium.waitForVisible(${locator1}, "false");

			selenium.mouseOver(${locator1});

			selenium.selectFrame(${locator1});

			selenium.assertJavaScriptErrors("true");

			selenium.assertLiferayErrors();
		}
		else {
			SelectFrame.selectFrameTop();
		}

		WaitForSPARefresh();
	}

	function selectFrameNoLoading(locator1) {
		if (contains(${locator1}, "/iframe")) {
			selenium.waitForVisible(${locator1}, "false");

			selenium.mouseOver(${locator1});

			selenium.selectFrame(${locator1});

			selenium.assertJavaScriptErrors("true");

			selenium.assertLiferayErrors();
		}
		else {
			SelectFrame.selectFrameTop();
		}

		WaitForSPARefresh();
	}

	function selectFrameTop() {
		selenium.selectFrame("relative=top");

		selenium.assertJavaScriptErrors("true");

		selenium.assertLiferayErrors();

		WaitForSPARefresh();
	}

	function selectSecondFrame(locator1) {
		if (contains(${locator1}, "/iframe")) {
			selenium.waitForVisible(${locator1}, "false");

			selenium.mouseOver(${locator1});

			selenium.selectFrame(${locator1});

			selenium.assertJavaScriptErrors("true");

			selenium.assertLiferayErrors();
		}
		else {
			SelectFrame.selectFrameTop();
		}

		WaitForSPARefresh();
	}

}