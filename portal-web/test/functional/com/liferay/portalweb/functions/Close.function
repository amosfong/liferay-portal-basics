@default = "close"
definition {

	function close() {
		WaitForSPARefresh();

		selenium.selectWindow("null");

		selenium.selectFrame("relative=top");

		selenium.assertJavaScriptErrors("true");

		selenium.assertLiferayErrors();
	}

	function closeAndSelectWindow(value1) {
		WaitForSPARefresh();

		selenium.pause(1000);

		selenium.close();

		selenium.pause(5000);

		selenium.selectWindow(${value1});

		selenium.assertJavaScriptErrors("true");

		selenium.assertLiferayErrors();
	}

	function closeWindow() {
		WaitForSPARefresh();

		selenium.pause(1000);

		selenium.close();

		selenium.selectWindow("null");

		selenium.selectFrame("relative=top");

		selenium.assertJavaScriptErrors("true");

		selenium.assertLiferayErrors();
	}

}