--%>

<div class="hide" id="<portlet:namespace />exportProcess">
	<aui:select label="file-extension" name="fileExtension">
		<aui:option value="csv">CSV</aui:option>
		<aui:option value="xml">XML</aui:option>
	</aui:select>

	<aui:input label="export-only-approved-submissions" name="exportOnlyApproved" type="checkbox" />
</div>

<aui:script>
	Liferay.provide(
		window,
		'<portlet:namespace />exportKaleoProcess',
		(url) => {
			const form = document.createElement('form');
			const content = document.getElementById(
				'<portlet:namespace />exportProcess'
			);

			form.method = 'POST';

			if (content) {
				form.append(content);

				content.classList.remove('hide');
			}

			var dialog = Liferay.Util.Window.getWindow({
				dialog: {
					bodyContent: form,
					cssClass: 'kaleo-process-export-dialog',
					height: 286,
					render: '#p_p_id<portlet:namespace />',
					resizable: false,
					toolbars: {
						footer: [
							{
								cssClass: 'btn-primary',
								label: '<%= UnicodeLanguageUtil.get(request, "ok") %>',
								on: {
									click: () => {
										submitForm(form, url, false);

										dialog.hide();
									},
								},
								primary: true,
							},
							{
								label: '<%= UnicodeLanguageUtil.get(request, "cancel") %>',
								on: {
									click: () => {
										dialog.hide();
									},
								},
							},
						],
						header: [
							{
								cssClass: 'close',
								label: '\u00D7',
								on: {
									click: () => {
										dialog.hide();
									},
								},
							},
						],
					},
					width: 350,
				},
				title: '<%= UnicodeLanguageUtil.get(request, "export") %>',
			});
		},
		['liferay-util-window']
	);
</aui:script>