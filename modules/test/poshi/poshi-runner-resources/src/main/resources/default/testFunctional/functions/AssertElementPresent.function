@default = "assertElementPresent"
@summary = "Assert that '${locator1}' is available"
definition {

	function assertElementPresent(locator1) {
		selenium.waitForElementPresent(${locator1}, "true");

		selenium.assertElementPresent(${locator1});
	}

	function assertVisible(locator1) {
		selenium.waitForVisible(${locator1}, "true");

		selenium.assertVisible(${locator1});
	}

	function pauseAssertVisible() {
		selenium.pause(2000);

		AssertElementPresent.assertVisible();
	}

}