<div id="item-finder-root-account"></div>

<%
int commerceSiteType = commerceChannelAccountEntryQualifiersDisplayContext.getCommerceSiteType();
%>

<liferay-frontend:component
	context='<%=
		HashMapBuilder.<String, Object>put(
			"accountEntryTypes", (commerceSiteType == 0) ? new String[] {AccountConstants.ACCOUNT_ENTRY_TYPE_PERSON} : ((commerceSiteType == 1) ? new String[] {AccountConstants.ACCOUNT_ENTRY_TYPE_BUSINESS, AccountConstants.ACCOUNT_ENTRY_TYPE_SUPPLIER} : new String[] {AccountConstants.ACCOUNT_ENTRY_TYPE_BUSINESS, AccountConstants.ACCOUNT_ENTRY_TYPE_PERSON, AccountConstants.ACCOUNT_ENTRY_TYPE_SUPPLIER})
		).put(
			"channelExternalReferenceCode", commerceChannel.getExternalReferenceCode()
		).put(
			"channelId", commerceChannelId
		).put(
			"dataSetId", CommerceChannelFDSNames.CHANNEL_QUALIFIER_ACCOUNTS
		).put(
			"rootPortletId", portletDisplay.getRootPortletId()
		).put(
			"spritemap", themeDisplay.getPathThemeSpritemap()
		).build()
	%>'
	module="{accountEntries} from commerce-channel-web"
/>

<commerce-ui:panel
	bodyClasses="p-0"
	title='<%= LanguageUtil.get(request, "accounts") %>'
>
	<frontend-data-set:headless-display
		apiURL="<%= commerceChannelAccountEntryQualifiersDisplayContext.getCommerceChannelAccountEntriesAPIURL() %>"
		fdsActionDropdownItems="<%= commerceChannelAccountEntryQualifiersDisplayContext.getCommerceChannelAccountEntryFDSActionDropdownItems() %>"
		formName="fm"
		id="<%= CommerceChannelFDSNames.CHANNEL_QUALIFIER_ACCOUNTS %>"
		itemsPerPage="<%= 10 %>"
	/>
</commerce-ui:panel>