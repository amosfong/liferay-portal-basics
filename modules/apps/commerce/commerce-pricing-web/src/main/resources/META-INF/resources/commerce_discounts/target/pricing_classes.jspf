<c:if test="<%= hasPermission %>">
	<div id="item-finder-root"></div>

	<liferay-frontend:component
		context='<%=
			HashMapBuilder.<String, Object>put(
				"commerceDiscountId", commerceDiscountId
			).put(
				"discountExternalReferenceCode", commerceDiscount.getExternalReferenceCode()
			).put(
				"namespace", liferayPortletResponse.getNamespace()
			).put(
				"portletId", portletDisplay.getRootPortletId()
			).put(
				"pricingFDSName", CommercePricingFDSNames.DISCOUNT_PRICING_CLASSES
			).put(
				"spritemap", themeDisplay.getPathThemeSpritemap()
			).build()
		%>'
		module="{pricingClasses} from commerce-pricing-web"
	/>

	<commerce-ui:panel
		bodyClasses="p-0"
		title='<%= LanguageUtil.get(request, "product-groups") %>'
	>
		<frontend-data-set:headless-display
			apiURL="<%= commerceDiscountDisplayContext.getDiscountPricingClassesApiURL() %>"
			fdsActionDropdownItems="<%= commerceDiscountDisplayContext.getDiscountPricingClassFDSActionDropdownItems() %>"
			formName="fm"
			id="<%= CommercePricingFDSNames.DISCOUNT_PRICING_CLASSES %>"
			itemsPerPage="<%= 10 %>"
		/>
	</commerce-ui:panel>
</c:if>