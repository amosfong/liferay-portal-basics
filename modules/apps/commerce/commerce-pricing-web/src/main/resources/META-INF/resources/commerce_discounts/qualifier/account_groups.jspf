<c:if test="<%= hasPermission %>">
	<div id="item-finder-root"></div>

	<liferay-frontend:component
		context='<%=
			HashMapBuilder.<String, Object>put(
				"commerceDiscountId", commerceDiscountId
			).put(
				"discountExternalReferenceCode", commerceDiscount.getExternalReferenceCode()
			).put(
				"portletId", portletDisplay.getRootPortletId()
			).put(
				"pricingName", CommercePricingFDSNames.DISCOUNT_QUALIFIER_ACCOUNT_GROUPS
			).put(
				"spritemap", themeDisplay.getPathThemeSpritemap()
			).build()
		%>'
		module="{accountGroups} from commerce-pricing-web"
	/>

	<commerce-ui:panel
		bodyClasses="p-0"
		title='<%= LanguageUtil.get(request, "account-groups") %>'
	>
		<frontend-data-set:headless-display
			apiURL="<%= commerceDiscountQualifiersDisplayContext.getDiscountAccountGroupsAPIURL() %>"
			fdsActionDropdownItems="<%= commerceDiscountQualifiersDisplayContext.getAccountGroupFDSActionDropdownItems() %>"
			formName="fm"
			id="<%= CommercePricingFDSNames.DISCOUNT_QUALIFIER_ACCOUNT_GROUPS %>"
			itemsPerPage="<%= 10 %>"
		/>
	</commerce-ui:panel>
</c:if>