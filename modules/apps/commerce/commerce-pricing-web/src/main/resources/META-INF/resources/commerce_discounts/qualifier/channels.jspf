<c:if test="<%= hasPermission %>">
	<div id="item-finder-root-channel"></div>

	<liferay-frontend:component
		context='<%=
			HashMapBuilder.<String, Object>put(
				"commerceDiscountId", commerceDiscountId
			).put(
				"discountExternalReferenceCode", commerceDiscount.getExternalReferenceCode()
			).put(
				"portletId", portletDisplay.getRootPortletId()
			).put(
				"pricingFDSName", CommercePricingFDSNames.DISCOUNT_QUALIFIER_CHANNELS
			).put(
				"spritemap", themeDisplay.getPathThemeSpritemap()
			).build()
		%>'
		module="{channels} from commerce-pricing-web"
	/>

	<commerce-ui:panel
		bodyClasses="p-0"
		title='<%= LanguageUtil.get(request, "channels") %>'
	>
		<frontend-data-set:headless-display
			apiURL="<%= commerceDiscountQualifiersDisplayContext.getDiscountChannelsAPIURL() %>"
			fdsActionDropdownItems="<%= commerceDiscountQualifiersDisplayContext.getDiscountChannelFDSActionDropdownItems() %>"
			formName="fm"
			id="<%= CommercePricingFDSNames.DISCOUNT_QUALIFIER_CHANNELS %>"
			itemsPerPage="<%= 10 %>"
		/>
	</commerce-ui:panel>
</c:if>