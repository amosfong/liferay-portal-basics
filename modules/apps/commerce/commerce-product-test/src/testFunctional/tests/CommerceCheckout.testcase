	@description = "COMMERCE-12920. Cannot select 'PayPal Subscriptions' as the order's payment method unless a product with subscription enabled is in the cart"
	@priority = 5
	test CannotSelectPayPalSubscriptionsWithNonSubscriptionProducts {
		property portal.acceptance = "true";

		task ("Given a Minium site is created") {
			CommerceAccelerators.initializeNewSiteViaAccelerator(siteName = "Minium");
		}

		task ("And a business account with a buyer user and an address is created") {
			CommerceEntry.addAccountEntryUser(
				accountName = "Commerce Account",
				accountType = "Business",
				agreeToTermsAndAnswerReminderQuery = "true",
				createNewAccount = "true",
				requireReset = "false",
				userEmailAddress = "buyer@liferay.com",
				userFirstName = "Buyer",
				userLastName = "User",
				userRole = "Buyer",
				userScreenName = "buyeruser",
				userSiteMembership = "Minium");

			CommerceJSONAccountsAPI._addCommerceAccountAddress(
				accountEntryName = "Commerce Account",
				city = "Test City",
				countryISOCode = "US",
				name = "Test Address",
				street1 = "Test Street",
				zip = "Test Zip Code");
		}

		task ("And a user with the Operations Manager role is created") {
			JSONUser.addUserWithRole(
				roleTitle = "Operations Manager",
				userEmailAddress = "om@liferay.com",
				userFirstName = "userfn",
				userLastName = "userln",
				userScreenName = "usersn");

			Permissions.definePermissionViaJSONAPI(
				resourceAction = "MANAGE_COMMERCE_ORDER_PAYMENT_METHODS",
				resourceName = "com.liferay.commerce.order",
				roleTitle = "Operations Manager");
		}

		task ("And a product has subscription enabled") {
			CommerceJSONProductsAPI._patchCommerceProductSubscriptionConfiguration(
				paymentSubscriptionEnabled = "true",
				paymentSubscriptionLength = 2,
				paymentSubscriptionNumberOfLength = 0,
				paymentSubscriptionType = "monthly",
				paymentSubscriptionTypeSettings = "paymentMonthDay:1,paymentMonthlyMode:0",
				productName = "ABS Sensor");
		}

		task ("And Money Order, PayPal Subscriptions and PayPal are active payment methods") {
			CommerceChannels.openChannelsAdmin();

			CommerceNavigator.gotoEntry(entryName = "Minium Portal");

			for (var paymentMethod : list "Money Order,PayPal,PayPal Subscriptions") {
				CommerceChannels.editPaymentMethod(
					active = "true",
					paymentMethod = ${paymentMethod});
			}
		}

		task ("When the buyer tries to checkout a non-subscription product") {
			User.logoutPG();

			CommerceLogin.miniumLogin(
				password = PropsUtil.get("default.admin.password"),
				urlAppend = "web/minium",
				userEmailAddress = "buyer@liferay.com");

			FrontStore.addInitializerProductToCart(
				productName = "U-Joint",
				productQuantity = 1);

			WaitForElementPresent(locator1 = "CommerceEntry#ACTIVE_ORDER_ID");

			var orderId = selenium.getText("CommerceEntry#ACTIVE_ORDER_ID");

			CommerceCheckout.gotoCheckout();
		}

		task ("Then the user cannot see 'PayPal Subscriptions' during the checkout") {
			Select(
				key_selectFieldLabel = "Choose Shipping Address",
				locator1 = "Select#ANY",
				value1 = "Test Address");

			Click(locator1 = "Button#CONTINUE");

			AssertElementPresent(
				key_label = "Payment Method",
				locator1 = "CommerceAccelerators#CHECKOUT_MULTI_STEP_INDICATOR_LABEL");

			Click(locator1 = "Button#CONTINUE");

			for (var paymentMethod : list "Money Order,PayPal") {
				AssertElementPresent(
					key_radioOption = ${paymentMethod},
					locator1 = "CommerceEntry#RADIO_BUTTON");
			}

			AssertElementNotPresent(
				key_radioOption = "PayPal Subscriptions",
				locator1 = "CommerceEntry#RADIO_BUTTON");
		}

		task ("When the buyer tries to checkout a product with subscription enabled") {
			Navigator.openWithAppendToBaseURL(urlAppend = "web/minium/catalog");

			CommerceAcceleratorsInitializer.createNewOrderFromAccountSelectorDropdown();

			Navigator.openWithAppendToBaseURL(urlAppend = "web/minium/catalog");

			FrontStore.addInitializerProductToCart(
				productName = "ABS Sensor",
				productQuantity = 1);

			WaitForElementPresent(locator1 = "CommerceEntry#ACTIVE_ORDER_ID");

			var subscriptionOrderId = selenium.getText("CommerceEntry#ACTIVE_ORDER_ID");

			CommerceCheckout.gotoCheckout();
		}

		task ("Then the user cannot select the payment method as 'PayPal Subscriptions' is the only payment method valid for subscriptions") {
			Select(
				key_selectFieldLabel = "Choose Shipping Address",
				locator1 = "Select#ANY",
				value1 = "Test Address");

			Click(locator1 = "Button#CONTINUE");

			AssertElementNotPresent(
				key_label = "Payment Method",
				locator1 = "CommerceAccelerators#CHECKOUT_MULTI_STEP_INDICATOR_LABEL");

			Click(locator1 = "Button#CONTINUE");

			for (var paymentMethod : list "Money Order,PayPal") {
				AssertElementNotPresent(
					key_radioOption = ${paymentMethod},
					locator1 = "CommerceEntry#RADIO_BUTTON");
			}

			AssertTextEquals(
				key_paymentMethod = "PayPal Subscriptions",
				locator1 = "CommerceAccelerators#CHECKOUT_SUMMARY_PAYMENT_METHOD",
				value1 = "PayPal Subscriptions");
		}

		task ("When the Operations Manager navigates to the non-subscription order") {
			User.logoutAndLoginPG(
				userLoginEmailAddress = "om@liferay.com",
				userLoginFullName = "Operations Manager");

			for (var order : list "${orderId},${subscriptionOrderId}") {
				CommerceOrders.openOrdersAdmin();

				CommerceNavigator.gotoEntry(entryName = ${order});

				CommerceEntry.gotoMenuTab(menuTab = "Payments");

				if (${order} == ${orderId}) {
					CommerceOrders.editPaymentMethod(
						eligiblePaymentMethods = "Money Order,PayPal",
						notEligiblePaymentMethods = "PayPal Subscriptions",
						paymentMethod = "Money Order");
				}
				else if (${order} == ${subscriptionOrderId}) {
					CommerceOrders.editPaymentMethod(
						eligiblePaymentMethods = "PayPal Subscriptions",
						notEligiblePaymentMethods = "Money Order,PayPal",
						paymentMethod = "PayPal Subscriptions");
				}
			}
		}
	}

