<c:if test="<%= hasPermission %>">
	<div id="item-finder-root"></div>

	<liferay-frontend:component
		context='<%=
			HashMapBuilder.<String, Object>put(
				"dataSetId", COREntryFDSNames.COR_ENTRY_QUALIFIER_ACCOUNT_GROUPS
			).put(
				"orderRuleExternalReferenceCode", corEntry.getExternalReferenceCode()
			).put(
				"orderRuleId", corEntryId
			).put(
				"rootPortletId", portletDisplay.getRootPortletId()
			).build()
		%>'
		module="{accountGroups} from commerce-order-rule-web"
	/>

	<commerce-ui:panel
		bodyClasses="p-0"
		title='<%= LanguageUtil.get(request, "account-groups") %>'
	>
		<frontend-data-set:headless-display
			apiURL="<%= corEntryQualifiersDisplayContext.getAccountGroupCOREntriesAPIURL() %>"
			fdsActionDropdownItems="<%= corEntryQualifiersDisplayContext.getAccountGroupFDSActionDropdownItems() %>"
			formName="fm"
			id="<%= COREntryFDSNames.COR_ENTRY_QUALIFIER_ACCOUNT_GROUPS %>"
			itemsPerPage="<%= 10 %>"
		/>
	</commerce-ui:panel>
</c:if>