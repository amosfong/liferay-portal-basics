definition {

	@summary = "Default summary"
	macro addFolder(folderLabel = null, folderName = null) {
		Variables.assertDefined(parameterList = "${folderLabel},${folderName}");

		var portalURL = JSONCompany.getPortalURL();

		if (!(isSet(userEmailAddress))) {
			var userEmailAddress = "test@liferay.com";
		}

		if (!(isSet(userPassword))) {
			var userPassword = PropsUtil.get("default.admin.password");
		}

		var curl = '''
			${portalURL}/o/object-admin/v1.0/object-folders \
				-H 'Content-Type: application/json' \
				-u ${userEmailAddress}:${userPassword} \
				-d '{
					"label": {
						"en_US": "${folderLabel}"
					},
					"name": "${folderName}"
				}'
		''';

		var objectFolderERC = JSONCurlUtil.post(${curl}, "$.externalReferenceCode");

		return ${objectFolderERC};
	}

	@summary = "Default summary"
	macro deleteObjectFolder(folderName = null) {
		var portalURL = JSONCompany.getPortalURL();
		var userLoginInfo = JSONUtil2.formatJSONSuperAdminUser();

		if (!(isSet(folderId))) {
			var folderId = JSONObjectFolder.getObjectFolderId(folderName = ${folderName});
		}

		var curl = '''
			${portalURL}/o/object-admin/v1.0/object-folders/${folderId} \
				-u ${userLoginInfo} \
				-H Content-Type: application/json
		''';

		JSONCurlUtil.delete(${curl});
	}

	@summary = "Default summary"
	macro getAllCustomObjectFolderId() {
		var portalURL = JSONCompany.getPortalURL();
		var userLoginInfo = JSONUtil2.formatJSONSuperAdminUser();

		var curl = '''
			${portalURL}/o/object-admin/v1.0/object-folders \
				-u ${userLoginInfo} \
				-H Content-Type: application/json
		''';

		var folderIdList = JSONCurlUtil.get(${curl}, "$.items[?(@['name'] != 'Default')]['id']");

		return ${folderIdList};
	}

	@summary = "Default summary"
	macro getObjectFolderERC(folderName = null) {
		var portalURL = JSONCompany.getPortalURL();
		var userLoginInfo = JSONUtil2.formatJSONSuperAdminUser();

		var curl = '''
			${portalURL}/o/object-admin/v1.0/object-folders \
				-u ${userLoginInfo} \
				-H Content-Type: application/json
		''';

		var folderERC = JSONCurlUtil.get(${curl}, "$.items[?(@['name'] == '${folderName}')]['externalReferenceCode']");

		return ${folderERC};
	}

	@summary = "Default summary"
	macro getObjectFolderId(folderName = null) {
		var portalURL = JSONCompany.getPortalURL();
		var userLoginInfo = JSONUtil2.formatJSONSuperAdminUser();

		var curl = '''
			${portalURL}/o/object-admin/v1.0/object-folders \
				-u ${userLoginInfo} \
				-H Content-Type: application/json
		''';

		var folderId = JSONCurlUtil.get(${curl}, "$.items[?(@['name'] == '${folderName}')]['id']");

		return ${folderId};
	}

	@summary = "Default summary"
	macro tearDown() {
		var folderIdList = JSONObjectFolder.getAllCustomObjectFolderId();

		if (${folderIdList} != "") {
			for (var folderId : list ${folderIdList}) {
				JSONObjectFolder.deleteObjectFolder(folderId = ${folderId});
			}
		}
	}

}