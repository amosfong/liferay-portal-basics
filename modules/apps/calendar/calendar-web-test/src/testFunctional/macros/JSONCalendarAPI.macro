definition {

	@summary = "Default summary"
	macro deleteCalendar(calendarId = null) {
		Variables.assertDefined(parameterList = ${calendarId});

		var portalURL = JSONCompany.getPortalURL();
		var userPassword = PropsUtil.get("default.admin.password");

		var curl = '''
			${portalURL}/api/jsonws/calendar.calendar/delete-calendar \
				-u test@liferay.com:${userPassword} \
				-d calendarId=${calendarId}
		''';

		JSONCurlUtil.post(${curl});
	}

