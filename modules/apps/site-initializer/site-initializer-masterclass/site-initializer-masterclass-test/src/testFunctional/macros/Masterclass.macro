definition {

	@summary = "Default summary"
	macro createAccount(firstName = null, lastName = null, emailAddress = null, password = null, screenName = null) {
		AssertClick(
			locator1 = "Link#CREATE_ACCOUNT",
			value1 = "Create Account");

		Type(
			labelTitle = "Screen Name",
			locator1 = "Masterclass#SIGN_IN_FORM",
			value1 = ${screenName});

		Type(
			labelTitle = "Email Address",
			locator1 = "Masterclass#SIGN_IN_FORM",
			value1 = ${emailAddress});

		Type(
			labelTitle = "First Name",
			locator1 = "Masterclass#SIGN_IN_FORM",
			value1 = ${firstName});

		Type(
			labelTitle = "Last Name",
			locator1 = "Masterclass#SIGN_IN_FORM",
			value1 = ${lastName});

		Type(
			labelTitle = "Password",
			locator1 = "Masterclass#SIGN_IN_FORM",
			value1 = ${password});

		Type(
			labelTitle = "Reenter Password",
			locator1 = "Masterclass#SIGN_IN_FORM",
			value1 = ${password});

		Click(locator1 = "Button#SUBMIT");
	}

	@summary = "Default summary"
	macro goBackUsingBrowserButton() {
		GoBack();
	}

	@summary = "Default summary"
	macro goBackUsingBrowserHistory() {
		ExecuteJavaScript(value1 = "window.history.go(-1)");
	}

	@summary = "Default summary"
	macro goToLink(key_href = null, key_description = null, key_buttonName = null, key_title = null) {
		Click(
			key_buttonName = ${key_buttonName},
			key_href = ${key_href},
			locator1 = "Masterclass#FRAGMENT_LINK");

		WaitForPageLoad();

		if (isSet(key_description)) {
			AssertElementPresent(
				key_description = ${key_description},
				locator1 = "TeamExtranet#FRAGMENT_TEXT_BLOCK");
		}

		if (isSet(key_title)) {
			AssertElementPresent(
				key_title = ${key_title},
				locator1 = "TeamExtranet#FRAGMENT_HEADING");
		}
	}

	@summary = "Default summary"
	macro gotoNavItem(navItem = null) {
		var key_navItem = ${navItem};

		Click(locator1 = "Masterclass#NAV_TAB");

		Click(locator1 = "Masterclass#NAV_ITEM");
	}

	@summary = "Default summary"
	macro previewPageandAssertFragment(fragmentName = null) {
		PageEditor.previewInANewTab();

		AssertElementPresent(
			key_fragmentName = ${fragmentName},
			locator1 = "Masterclass#FRAGMENT_NAME");
	}

	@summary = "Default summary"
	macro signIn(emailAddress = null, password = null) {
		if (isSet(emailAddress)) {
			Type(
				labelTitle = "Email Address",
				locator1 = "Masterclass#SIGN_IN_FORM",
				value1 = ${emailAddress});
		}
		else {
			Type(
				labelTitle = "Email Address",
				locator1 = "Masterclass#SIGN_IN_FORM",
				value1 = "test@liferay.com");
		}

		if (isSet(password)) {
			Type(
				labelTitle = "Password",
				locator1 = "Masterclass#SIGN_IN_FORM",
				value1 = ${password});
		}
		else {
			Type(
				labelTitle = "Password",
				locator1 = "Masterclass#SIGN_IN_FORM",
				value1 = ${PropsUtil.get('default.admin.password')});
		}

		Check(
			inputFieldId = "rememberMe",
			locator1 = "TextInput#INPUT_ID");

		Click(locator1 = "Button#SIGN_IN");
	}

	@summary = "Default summary"
	macro simulateAndViewPageElements(deviceType = null, elementsList = null) {
		MobileDevice.previewPG(deviceType = ${deviceType});

		for (var element : list ${elementsList}) {
			AssertElementPresent(
				key_fragmentName = ${element},
				locator1 = "Masterclass#FRAGMENTS_IN_SIMULATION");
		}
	}

	@summary = "Default summary"
	macro verifySignInForm() {
		AssertElementPresent(
			labelTitle = "Email Address",
			locator1 = "Masterclass#SIGN_IN_FORM");

		AssertElementPresent(
			labelTitle = "Password",
			locator1 = "Masterclass#SIGN_IN_FORM");
	}

	@summary = "Default summary"
	macro viewCoursesInPage(key_href = null, key_description = null, key_title = null, key_buttonName = null) {
		if (isSet(title)) {
			AssertElementPresent(
				key_title = ${key_title},
				locator1 = "Masterclass#FRAGMENT_HEADING");
		}

		if (isSet(description)) {
			AssertElementPresent(
				key_description = ${key_description},
				locator1 = "Masterclass#FRAGMENT_TEXT_BLOCK");
		}

		if (isSet(link)) {
			AssertElementPresent(
				key_buttonName = ${key_buttonName},
				key_href = ${key_href},
				locator1 = "Masterclass#FRAGMENT_LINK");
		}
	}

}